@model Course
<style>


    .card-img .parent{display:flex;}
    img.child{object-fit:contain;}
</style>
    <div class="card mb-5" style="max-width: 540px;">
        <div class="row no-gutters">
            <div class="col-md-4">
                <div class="col-md-4"></div>
                <img src="@Model.ImageUrl" class="card-img"  alt="@Model.Title">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title">@Model.Title</h5>
                    <p class="card-text">@Model.Category.Name</p>
                    <p class="card-text"><small class="text-muted">@Model.Description</small></p>
                    <p class="card-text"><small class="text-muted">@Model.Fee</small></p>
                    <a 
                       asp-controller="ShoppingCart"
                       asp-action="AddToShoppingCart"
                       asp-route-courseId ="@Model.CourseId"
                       class="btn btn-primary">Add to cart</a>
                </div>
            </div>
        </div>
    </div>
